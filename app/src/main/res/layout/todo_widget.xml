<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Title_todo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="해야 할 일"
            android:textSize="20dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:background="@drawable/alarm_on"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/inverted_triangle" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:background="@drawable/border"
        android:id="@+id/Text_todo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:hint="설명"/>

    <TextView
        android:id="@+id/todo_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은시간출력"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1">
        <Button
            android:id="@+id/button_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/share" />
        <Button
            android:id="@+id/button_correction"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/correction" />

        <Button
            android:id="@+id/button_trash_can"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/trashcan" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/border2">
    </LinearLayout>
</LinearLayout>
