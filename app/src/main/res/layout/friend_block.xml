<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:background="#AE84E8"
        android:orientation="horizontal">

        <!-- 체크박스!-->
        <CheckBox
            android:id="@+id/chkGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/rimgGroup"
            android:layout_alignParentRight="@+id/rimgGroup"
            tools:ignore="MissingClass"
            android:button="@drawable/bg_round_checkbox_button"
            android:cb_color="@color/black"
            android:cb_pressed_ring_width="2dp"
            android:focusable="false"
            android:scaleX="1.20"
            android:scaleY="1.20"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp" />
        <!-- 이미지!-->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/profile" />
        <!-- 친구 이름!-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@+id/community_create_edittext_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>