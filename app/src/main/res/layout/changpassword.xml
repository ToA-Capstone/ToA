<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:background="#AC58FA"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
       >
        <!-- 비밀번호 변경 텍스트!-->
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="비밀 번호 변경"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <!-- 기존 비밀번호 입력 !-->
        <EditText
            android:id="@+id/changpassword_edittext_password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColorHint="#000000"
            android:hint="기존 비밀번호 입력"
            android:background="#FFFFFF"
            android:textSize="15sp">
        </EditText>

        <!-- 새 비밀번호 입력 !-->
        <EditText
            android:id="@+id/changpassword_edittext_newpassword"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="새 비밀번호 입력"
            android:textColorHint="#000000"
            android:background="#FFFFFF"
            android:textSize="15sp">
        </EditText>

        <!-- 새 비밀번호 확인 !-->
        <EditText
            android:id="@+id/changpassword_edittext_new2password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="새 비밀번호 확인"
            android:textColorHint="@color/black"
            android:background="#FFFFFF"
            android:textSize="15sp">
        </EditText>

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <!-- 확인 버튼 !-->
            <Button
                android:id="@+id/button_check"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:text="확인"
                android:background="#FFFFFF"
                android:textSize="13sp"></Button>

            <!-- 취소 버튼 !-->
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="160dp"
                android:text="취소"
                android:background="#FFFFFF"
                android:textSize="13sp"></Button>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>